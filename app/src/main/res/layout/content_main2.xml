<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CityListActivity"
    android:background="#fff"
    android:id="@+id/main_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg"
            android:adjustViewBounds="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative">
            <TextView
                android:id="@+id/temp_textView"
                android:layout_width="87dp"
                android:layout_height="97dp"
                android:text="23"
                android:textColor="#2a2abb"
                android:textSize="70dp"
                android:layout_marginLeft="20dp"

                app:fontFamily="sans-serif-smallcaps"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="131dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:text="o"
                android:textColor="#2a2abb"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/city_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_below="@id/textView2"
                android:text="Beijing"
                android:textColor="#2a2abb"
                android:textSize="20sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative2"
            >

            <TextView
                android:id="@+id/textView_weather"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:lineSpacingExtra="0sp"
                android:text="多云"
                android:textAlignment="center"
                android:textColor="#2a2abb"

                android:textSize="30dp"
                app:fontFamily="sans-serif-smallcaps"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="131dp" />
            <TextView
                android:id="@+id/textView_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textView_weather"
                android:layout_alignBottom="@id/textView_weather"
                android:lineSpacingExtra="0sp"
                android:text="无持续风向"
                android:textColor="#2a2abb"
                android:gravity="bottom"
                android:textSize="20dp"
                app:fontFamily="sans-serif-smallcaps"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="131dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/day_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#2a2abb"
                android:text="晴"/>
            <TextView
                android:id="@+id/day_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#2a2abb"
                android:text="晴"/>
            <TextView
                android:id="@+id/day_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#2a2abb"
                android:text="晴"/>
            <TextView
                android:id="@+id/day_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#2a2abb"
                android:text="晴"/>
            <TextView
                android:id="@+id/day_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#2a2abb"
                android:text="晴"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom">
            <ImageView
                android:id="@+id/img_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:src="@mipmap/duoyun"
                />
            <ImageView
                android:id="@+id/img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:src="@mipmap/duoyun"
                />
            <ImageView
                android:id="@+id/img_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:src="@mipmap/duoyun"
                />
            <ImageView
                android:id="@+id/img_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:src="@mipmap/duoyun"
                />
            <ImageView
                android:id="@+id/img_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:src="@mipmap/duoyun"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/temp_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#2a2abb"
                android:text="晴"/>
            <TextView
                android:id="@+id/temp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#2a2abb"
                android:text="晴"/>
            <TextView
                android:id="@+id/temp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#2a2abb"
                android:text="晴"/>
            <TextView
                android:id="@+id/temp_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#2a2abb"
                android:text="晴"/>
            <TextView
                android:id="@+id/temp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#2a2abb"
                android:text="晴"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView_read"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="天气较好，温度适宜，心情会不错，学习、工作效率较高。"
            android:padding="20dp"
            android:paddingTop="40dp"
            android:textColor="#000"
            />
    </LinearLayout>

</RelativeLayout>